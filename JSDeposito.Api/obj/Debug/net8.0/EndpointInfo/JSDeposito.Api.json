{
  "openapi": "3.0.1",
  "info": {
    "title": "JSDeposito.Api",
    "version": "1.0"
  },
  "paths": {
    "/api/pedidos": {
      "post": {
        "tags": [
          "Pedido"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CriarPedidoDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CriarPedidoDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CriarPedidoDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/produtos/{id}/baixar": {
      "post": {
        "tags": [
          "Produto"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "quantidade",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CriarPedidoDto": {
        "type": "object",
        "properties": {
          "itens": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ItemPedidoDto"
            },
            "nullable": true
          },
          "codigoCupom": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ItemPedidoDto": {
        "type": "object",
        "properties": {
          "produtoId": {
            "type": "integer",
            "format": "int32"
          },
          "quantidade": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      }
    }
  }
}